<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorBackground"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <EditText

            android:id="@+id/editText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:editable="false"
            android:ems="10"
            android:enabled="false"
            android:inputType="textMultiLine"
            android:singleLine="true"
            android:text="Las mejores personas para cuidar de tu mascota"
            android:textColor="@android:color/black"
            android:textSize="21sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.162"
            android:layout_weight="1.06" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:background="@android:drawable/menuitem_background"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="sans-serif-condensed"
            android:inputType="textMultiLine"
            android:text="Sabemos que es dificil encontrar a alguien en quién confiar para que cuide de tu mascota cuando estas fuera de tu casa. Es por esto que nuestro equipo encuentra a las mejores personas para cuidar de tu mascota y que puedas calificarlas según tu propia experiencia."
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editText10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.33"
            android:editable="false"
            android:ems="10"
            android:enabled="false"
            android:inputType="textMultiLine"
            android:singleLine="true"
            android:text="Revisiones honestas"
            android:textColor="@android:color/black"
            android:textSize="21sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.573" />

        <EditText
            android:id="@+id/editText11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:background="@android:drawable/menuitem_background"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="sans-serif-condensed"
            android:inputType="textMultiLine"
            android:text="Todos nuestros clientes comparten información detallada y calificaciones para todos nuestros cuidadores para ayudarte a encontrar la persona perfecta para vos y tu mascota."
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.14"
            android:editable="false"
            android:ems="10"
            android:enabled="false"
            android:inputType="textMultiLine"
            android:singleLine="true"
            android:text="Extensivo proceso de investigación"
            android:textColor="@android:color/black"
            android:textSize="21sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.573" />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/menuitem_background"
            android:ems="10"
            android:enabled="false"
            android:fontFamily="sans-serif-condensed"
            android:inputType="textMultiLine"
            android:text="Con PetVacay, sabes que tu mascota está en las mejores manos. Cada cuidador/paseador atraviesa un riguroso proceso de aprovación antes de poder unirse a nuestra comunidad."
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp"
            android:layout_weight="1.63"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
