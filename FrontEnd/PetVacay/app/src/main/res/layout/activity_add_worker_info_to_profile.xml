<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ximenamoure.petvacay.AddWorkerInfoToProfileActivity"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="3dp">





        <ImageButton
            android:id="@+id/changeImageWorker"
            android:layout_width="71dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_account_box"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="16dp"
            android:elevation="10dp"
            android:text="Cambiar foto"
            android:textSize="20sp" />


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:elevation="20dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Tus datos"
            android:textSize="20sp"
            android:background="#d3d5d9"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"/>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="210dp"

        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/WorkerName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Nombre"
                android:paddingLeft="10dp"/>
            <EditText
                android:id="@+id/WorkerSurname"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Apellido"
                android:paddingLeft="10dp"/>
            <EditText
                android:id="@+id/WorkerPhone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Telefono"
                android:inputType="phone"
                android:paddingLeft="10dp"/>






        </LinearLayout>


    </android.support.v7.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_action_edit"
            android:tint="@color/white"
            android:layout_marginRight="8dp"/>

        <Button
            android:id="@+id/updateWorkerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTUALIZAR PERFIL"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@android:color/transparent"/>

    </LinearLayout>


</LinearLayout>
